{
  "name": "cms",
  "version": "0.0.1",
  "description": "client side cms component library",
  "main": "index.js",
  "scripts": {
    "start": "./node_modules/.bin/parcel src/docs/index.html",
    "build": "npm run build:js && npm run build:dts && shx cp ./dist/lib/* src/docs/",
    "build:dts": "tsc --emitDeclarationOnly --declaration --allowJs false --module amd --outfile ./dist/lib/cms.js",
    "build:js": "webpack --mode=production",
    "build:docs": "cd src/docs && parcel build index.html -d ./dist/docs"
  },
  "author": "David Pershouse",
  "license": "MIT",
  "dependencies": {
    "@types/json-query": "^2.2.0",
    "@types/react": "^16.3.17",
    "@types/react-dom": "^16.0.6",
    "json-query": "^2.2.2",
    "react": "^16.4.1",
    "react-dom": "^16.4.1"
  },
  "peerDependencies": {},
  "devDependencies": {
    "parcel-bundler": "^1.9.0",
    "parcel-plugin-typescript": "^1.0.0",
    "shx": "^0.3.0",
    "ts-loader": "^4.4.1",
    "typescript": "^2.9.2",
    "webpack": "^4.12.0",
    "webpack-cli": "^3.0.7"
  }
}
