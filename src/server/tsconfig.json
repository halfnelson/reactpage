{
    "compilerOptions": {
      "baseUrl": "./",
      "outDir": "./dist/server",
      "sourceMap": true,
      "noImplicitAny": true,
      "module": "es6",
      "target": "es5",
      "jsx": "react",
      "lib": ["es5", "es6", "dom"],
      "allowJs": false,
      "forceConsistentCasingInFileNames": true,
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "node",
    },
    "exclude": [
      "./dist/lib/*",
      "./dist/**/*",
      "./src/lib/*",
      "./src/docs/*",
      "node_modules"
   ]
}